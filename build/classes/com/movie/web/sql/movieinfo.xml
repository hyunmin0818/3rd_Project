<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Movie">
	
	<insert id="addmovie" parameterType="moviedto">
		INSERT INTO user_info VALUES 
		(#{user_id},#{userpassword},#{username},
		#{email},#{userphone},#{userbirth})
	</insert>
	
	<select id="getMovieCnt"  resultType="int">
	SELECT COUNT(*) FROM movie
	</select>
	<select id="getMovieList" resultType="moviedto" parameterType="hashmap">
	SELECT *
	FROM (
	SELECT movie.*,
	ROW_NUMBER() OVER (ORDER BY releaseDate DESC) AS rownum
	FROM movie
	) AS ranked_movies
	WHERE rownum BETWEEN #{startRow} AND #{endRow}
	</select>
	
	<select id="searchMovies" resultType="MovieDTO" parameterType="java.util.HashMap">
        SELECT *
        FROM movies
        WHERE title LIKE #{parameter}
    </select>
</mapper>